<% content_for :title, "Product Roadmap | ChooseRuby" %>
<% content_for :meta_description, "See what’s coming next for the ChooseRuby platform—from searchable directory MVP to community-driven enhancements." %>

<div class="space-y-16 pb-16">
  <section class="rounded-3xl bg-white p-10 shadow-sm ring-1 ring-slate-100 sm:p-12">
    <div class="mx-auto max-w-4xl space-y-6 text-center">
      <h1 class="text-4xl font-semibold tracking-tight text-slate-900 sm:text-5xl">
        Roadmap: Building the definitive Ruby resource directory
      </h1>
      <p class="text-lg text-slate-600">
        We prioritize features that help developers discover trustworthy resources quickly, invite community contributions, and showcase why Ruby remains a modern choice.
      </p>
      <%= link_to "Browse the directory", entries_path, class: "inline-flex items-center justify-center rounded-full bg-rose-500 px-5 py-3 text-sm font-semibold text-white shadow-sm transition hover:bg-rose-400" %>
    </div>
  </section>

  <section class="space-y-6">
    <h2 class="text-3xl font-semibold text-slate-900 text-center">MVP focus areas</h2>
    <div class="grid gap-6 md:grid-cols-3">
      <% @mvp_tracks.each do |track| %>
        <div class="rounded-3xl border border-slate-100 bg-white p-6 text-left shadow-sm">
          <h3 class="text-xl font-semibold text-slate-900"><%= track[:title] %></h3>
          <p class="mt-3 text-sm text-slate-600"><%= track[:description] %></p>
        </div>
      <% end %>
    </div>
  </section>

  <section class="space-y-8">
    <h2 class="text-3xl font-semibold text-slate-900 text-center">Milestones by phase</h2>
    <div class="grid gap-6 lg:grid-cols-3">
      <% @roadmap_pillars.each do |pillar| %>
        <div class="flex h-full flex-col gap-4 rounded-3xl border border-slate-100 bg-white p-6 shadow-sm">
          <h3 class="text-xl font-semibold text-slate-900"><%= pillar[:title] %></h3>
          <ul class="space-y-3 text-sm text-slate-600">
            <% pillar[:items].each do |item| %>
              <li class="flex items-start gap-3">
                <span class="mt-1 h-2 w-2 flex-shrink-0 rounded-full bg-rose-400"></span>
                <span><%= item %></span>
              </li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </div>
  </section>

  <section class="rounded-3xl bg-slate-900 px-6 py-14 text-white shadow-lg sm:px-10 lg:px-16">
    <div class="mx-auto flex max-w-5xl flex-col gap-6 lg:flex-row lg:items-center lg:justify-between">
      <div class="space-y-4">
        <h2 class="text-3xl font-semibold sm:text-4xl">Want to shape what we build next?</h2>
        <p class="text-base text-slate-200">
          We’re looking for collaborators, early adopters, and curators who want to keep Ruby resources thriving.
        </p>
      </div>
      <div class="flex flex-col gap-3 sm:flex-row">
        <%= link_to "Submit feedback", "mailto:hello@chooseruby.com", class: "inline-flex h-12 items-center justify-center rounded-2xl bg-white/20 px-6 text-sm font-semibold text-white ring-1 ring-white/60 transition hover:bg-white/30 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-white" %>
        <%= link_to "Contribute a resource", new_resource_submission_path, class: "inline-flex h-12 items-center justify-center rounded-2xl bg-white px-6 text-sm font-semibold text-slate-900 shadow-sm transition hover:bg-slate-100" %>
      </div>
    </div>
  </section>
</div>
