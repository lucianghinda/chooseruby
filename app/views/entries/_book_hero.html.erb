<%# locals: (entry:) %>
<%# Book hero section with cover image and details %>
<%# Image dimensions: 1200x630px (landscape format) %>

<% book = entry.entryable %>

<section class="rounded-3xl bg-white shadow-sm ring-1 ring-slate-100 overflow-hidden">
  <%# Book Cover Image - Full width, landscape format %>
  <%# Using a subtle gradient background that works with any image %>
  <div class="relative overflow-hidden bg-gradient-to-br from-slate-100 via-slate-50 to-slate-100">
    <% if entry.image.attached? || entry.image_url.present? %>
      <div class="p-6 sm:p-8 md:p-10" style="aspect-ratio: 1200/630;">
        <% if entry.image.attached? %>
          <%= image_tag entry.image, alt: entry.title, class: "w-full h-full object-contain drop-shadow-xl" %>
        <% else %>
          <%= image_tag entry.image_url, alt: entry.title, class: "w-full h-full object-contain drop-shadow-xl", onerror: "this.parentElement.parentElement.innerHTML='<div class=\"flex flex-col items-center justify-center text-slate-400 aspect-[1200/630]\"><span class=\"text-6xl mb-4\">ðŸ“š</span><span class=\"text-lg font-medium\">#{j(truncate(entry.title, length: 33))}</span></div>'" %>
        <% end %>
      </div>
    <% else %>
      <%# Placeholder when no image %>
      <div class="flex flex-col items-center justify-center text-slate-400" style="aspect-ratio: 1200/630;">
        <span class="text-8xl mb-4">ðŸ“š</span>
        <span class="text-xl font-semibold text-slate-500 text-center px-4"><%= truncate(entry.title, length: 40) %></span>
      </div>
    <% end %>
  </div>

  <%# Book Details %>
  <div class="p-8 sm:p-12">
      <%# Categories %>
      <% if entry.categories.any? %>
        <div class="flex flex-wrap gap-2 mb-4">
          <% primary_category = entry.primary_category %>
          <% remaining_categories = entry.categories.reject { |c| c.id == primary_category&.id } %>

          <% if primary_category %>
            <%= link_to category_path(primary_category.slug), class: "inline-flex items-center gap-1.5 rounded-full bg-rose-500 px-3 py-1 text-xs font-medium text-white hover:bg-rose-600 transition-colors" do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" viewBox="0 0 20 20" fill="currentColor">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
              </svg>
              <%= primary_category.name %>
            <% end %>
          <% end %>

          <% remaining_categories.each do |category| %>
            <%= link_to category.name, category_path(category.slug), class: "inline-flex items-center rounded-full bg-slate-100 px-3 py-1 text-xs font-medium text-slate-600 hover:bg-slate-200 transition-colors" %>
          <% end %>
        </div>
      <% end %>

      <%# Title %>
      <h1 class="text-3xl md:text-4xl lg:text-5xl font-semibold tracking-tight text-slate-900 mb-4">
        <%= entry.title %>
      </h1>

      <%# Authors %>
      <% if entry.authors.any? %>
        <p class="text-lg text-slate-600 mb-6">
          by
          <% entry.authors.each_with_index do |author, index| %>
            <%= link_to author.name, author_path(author.slug), class: "font-medium text-slate-900 hover:text-rose-500 transition-colors" %><%= ", " unless index == entry.authors.size - 1 %>
          <% end %>
        </p>
      <% end %>

      <%# Metadata Chips %>
      <div class="flex flex-wrap gap-3 mb-8">
        <% if book.page_count.present? %>
          <div class="bg-slate-50 px-4 py-2.5 rounded-xl">
            <p class="text-xs text-slate-500 uppercase tracking-wide">Pages</p>
            <p class="font-semibold text-slate-900"><%= number_with_delimiter(book.page_count) %></p>
          </div>
        <% end %>

        <% if book.publication_year.present? %>
          <div class="bg-slate-50 px-4 py-2.5 rounded-xl">
            <p class="text-xs text-slate-500 uppercase tracking-wide">Published</p>
            <p class="font-semibold text-slate-900"><%= book.publication_year %></p>
          </div>
        <% end %>

        <% if book.publisher.present? %>
          <div class="bg-slate-50 px-4 py-2.5 rounded-xl">
            <p class="text-xs text-slate-500 uppercase tracking-wide">Publisher</p>
            <p class="font-semibold text-slate-900"><%= book.publisher %></p>
          </div>
        <% end %>

        <% if book.format.present? %>
          <div class="bg-slate-50 px-4 py-2.5 rounded-xl">
            <p class="text-xs text-slate-500 uppercase tracking-wide">Format</p>
            <p class="font-semibold text-slate-900"><%= book.format == "both" ? "Print & eBook" : book.format.humanize %></p>
          </div>
        <% end %>

        <% if book.isbn.present? %>
          <div class="bg-slate-50 px-4 py-2.5 rounded-xl">
            <p class="text-xs text-slate-500 uppercase tracking-wide">ISBN</p>
            <p class="font-semibold text-slate-900 font-mono text-sm"><%= book.isbn %></p>
          </div>
        <% end %>
      </div>

      <%# CTA Button %>
      <div class="flex flex-wrap gap-4">
        <% if book.purchase_url.present? %>
          <%= link_to book.purchase_url, target: "_blank", rel: "noopener noreferrer", class: "inline-flex items-center justify-center rounded-full bg-rose-500 px-8 py-4 text-base font-semibold text-white shadow-lg shadow-rose-500/25 hover:bg-rose-400 hover:shadow-rose-400/30 transition-all duration-200" do %>
            Buy Now
            <svg xmlns="http://www.w3.org/2000/svg" class="ml-2 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
          <% end %>
        <% else %>
          <%= link_to entry.url, target: "_blank", rel: "noopener noreferrer", class: "inline-flex items-center justify-center rounded-full bg-rose-500 px-8 py-4 text-base font-semibold text-white shadow-lg shadow-rose-500/25 hover:bg-rose-400 hover:shadow-rose-400/30 transition-all duration-200" do %>
            Visit Resource
            <svg xmlns="http://www.w3.org/2000/svg" class="ml-2 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
            </svg>
          <% end %>
        <% end %>
      </div>
  </div>
</section>
