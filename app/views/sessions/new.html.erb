<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-purple-600 to-blue-600 px-4">
  <div class="bg-white rounded-lg shadow-xl p-8 w-full max-w-md">
    <h1 class="text-3xl font-bold text-gray-900 mb-6">Sign In</h1>

    <% if flash[:alert] %>
      <div class="mb-4 p-4 bg-red-50 border border-red-200 text-red-700 rounded-lg">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <%= form_with url: session_path, method: :post, class: "space-y-6" do |f| %>
      <div>
        <%= f.label :email_address, "Email Address", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.email_field :email_address, required: true, autofocus: true,
            class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent" %>
      </div>

      <div>
        <%= f.label :password, "Password", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.password_field :password, required: true,
            class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent" %>
      </div>

      <div>
        <%= f.submit "Sign In", class: "w-full bg-purple-600 text-white py-2 px-4 rounded-lg hover:bg-purple-700 transition-colors font-medium" %>
      </div>
    <% end %>
  </div>
</div>
